generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Todo {
    id     String  @id
    title  String  @unique
    owner  String  @default("Anonymous")
    avatar String? @default("https://abre.ai/jUTD")
    done   Boolean @default(false)

    @@map("todos")
}
